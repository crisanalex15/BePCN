@using BackEndProduseCheltuieliNotite.Models.Objects
@model Product

@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Edit product</h1>
    <br />
    <a asp-action="viewProducts" asp-controller="Home" class="btn btn-dark">Back to products</a>
</div>

<form asp-action="viewProductsCreateEditForm" asp-controller="Home">
    <div class="form-group mb-4">
        <input type="hidden" asp-for="Id" />
    <div class="form-group mb-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" class="form-control" step="0.5" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit">Save</button>
    </div>
        <div class="form-group">
            <a asp-action="viewProducts" asp-controller="Home" class="btn btn-danger">Cancel</a>
            </div>
</form>
