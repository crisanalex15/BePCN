@using BackEndProduseCheltuieliNotite.Models.Objects
@model Note

@{
    ViewData["Title"] = "Note";
}

<div class="text-center">
    <h2>Edit note</h2>
    <br />
    <a asp-action="viewNotes" asp-controller="Home" class="btn btn-dark">Back to notes</a>

</div>

<form asp-action="viewNotesCreateEditForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-4">
        <label asp-for="Content" class="control-label"></label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mb-4" />
    </div>
    <div class="form-group">
        <a asp-action="viewNotes" asp-controller="Home" class="btn btn-danger">Cancel</a>
    </div>
</form>
