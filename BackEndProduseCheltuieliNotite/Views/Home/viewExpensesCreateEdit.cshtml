@using BackEndProduseCheltuieliNotite.Models.Objects
@model Expense

@{
    ViewData["Title"] = "Expenses";
}

<div class="text-center">
    <h2>Edit expense</h2>
    <br />
    <a asp-action="viewExpenses" asp-controller="Home" class="btn btn-dark">Back to expenses</a>

</div>

<form asp-action="viewExpensesCreateEditForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" class="form-control" step="1" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" type="datetime" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mb-4" />  
    </div>
    <div class="form-group">
        <a asp-action="viewExpenses" asp-controller="Home" class="btn btn-danger">Cancel</a>
    </div>
</form>
